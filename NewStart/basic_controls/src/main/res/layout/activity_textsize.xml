    <TextView
        android:id="@+id/textView_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:textSize="50dp"/>
    <TextView
        android:id="@+id/textView_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
